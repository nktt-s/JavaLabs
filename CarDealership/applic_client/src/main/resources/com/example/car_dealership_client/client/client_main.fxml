<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.car_dealership_client.client_controllers.ClientMainController">
    <children>
        <GridPane alignment="CENTER" layoutX="150.0" layoutY="164.0" prefHeight="280.0" prefWidth="780.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onInStockButtonClicked" prefHeight="80.0" prefWidth="200.0" text="Авто в наличии" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onShowMyOrdersButtonClicked" prefHeight="80.0" prefWidth="200.0" text="Активные заказы" textAlignment="CENTER" GridPane.columnIndex="1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCompletedOrdersButtonClicked" prefHeight="80.0" prefWidth="200.0" text="Завершённые заказы" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="2">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onLogOutButtonClicked" prefHeight="80.0" prefWidth="200.0" text="Выйти" textAlignment="CENTER" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </GridPane>
        <Label fx:id="clientNameHeader" alignment="CENTER" layoutX="-1.0" prefHeight="80.0" prefWidth="1000.0" text="Client">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
